@model Blow_Out.ViewModels.SummaryView

@{
    ViewBag.Title = "Summary";
}

<div class="row justify-content-center" style="margin-top:10px;">
    <div class="col-8">
        <div class="card">
            <img class="card-img" src="@Model.Instrument.Image" style="height:200px;" />
            <div class="card-body">
                <p class="card-text">
                    Thank you @Model.Customer.FirstName @Model.Customer.LastName! Please review your rental information.
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Item:</strong> @Model.Instrument.Description</li>
                <li class="list-group-item"><strong>Condition:</strong> @Model.Instrument.Type</li>
                <li class="list-group-item"><strong>Order ID:</strong> @Model.Customer.CustomerID</li>
                <li class="list-group-item"><strong>Cost/Month:</strong> @Model.Instrument.Price</li>
                <li class="list-group-item"><strong>Total After 18 months:</strong> @(Model.Instrument.Price * 18)</li>
            </ul>
        </div>
    </div>
</div>
